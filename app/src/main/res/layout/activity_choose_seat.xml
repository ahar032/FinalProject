<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".bus.ChooseSeatActivity"
    android:background="#f4f4f4">
    <LinearLayout
        android:layout_marginHorizontal="32dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:id="@+id/actionbar"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/goback"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_baseline_arrow_back_ios_new_24"
            android:layout_gravity="center"
            android:contentDescription="@string/goback"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">
            <TextView
                android:textStyle="bold"
                android:textColor="#3D3D3D"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choose seat"
                style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"/>
        </LinearLayout>
    </LinearLayout>
    <ScrollView

        android:layout_centerVertical="true"
        android:id="@+id/buschoose"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_centerHorizontal="true"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--baris 1-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bone"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal">
                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:text="1"
                    android:id="@+id/a1"
                    android:layout_marginEnd="8dp"
                    />
                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:text="2"
                    android:id="@+id/a2"
                    android:layout_marginEnd="8dp"

                    />
                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="50dp"
                    android:text="3"
                    android:id="@+id/a3"
                    android:layout_marginEnd="8dp"

                    />
                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:id="@+id/a4"
                    android:layout_marginEnd="8dp"
                    android:text="4"/>
            </LinearLayout>
            <!--baris 2-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bone"
                android:layout_marginTop="7dp"
                android:id="@+id/btwo"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal">
                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="60dp"
                    android:layout_marginEnd="8dp"
                    android:layout_height="60dp"
                    android:text="5"
                    android:id="@+id/b1"
                    />
                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginEnd="8dp"
                    android:text="6"
                    android:id="@+id/b2"
                    />
                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="60dp"
                    android:layout_marginEnd="8dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="50dp"
                    android:text="7"
                    android:id="@+id/b3"
                    />
                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="60dp"
                    android:layout_marginEnd="8dp"
                    android:layout_height="60dp"
                    android:id="@+id/b4"
                    android:text="8"/>
            </LinearLayout>
            <!--    baris 3-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btwo"
                android:layout_marginTop="7dp"
                android:translationZ="1dp"
                android:id="@+id/bthree"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal">
                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="60dp"
                    android:layout_marginEnd="8dp"
                    android:layout_height="60dp"
                    android:text="9"
                    android:id="@+id/c1"
                    />
                <androidx.appcompat.widget.AppCompatButton
                    android:layout_marginEnd="8dp"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:text="10"
                    android:id="@+id/c2"
                    />
                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="60dp"
                    android:layout_marginEnd="8dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="50dp"
                    android:text="11"
                    android:id="@+id/c3"
                    />
                <androidx.appcompat.widget.AppCompatButton
                    android:layout_marginEnd="8dp"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:id="@+id/c4"
                    android:text="12"/>
            </LinearLayout>
            <!--baris 4-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bthree"
                android:layout_marginTop="7dp"
                android:translationZ="1dp"
                android:id="@+id/bfour"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal">
                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="60dp"
                    android:layout_marginEnd="8dp"
                    android:layout_height="60dp"
                    android:text="13"
                    android:id="@+id/d1"
                    />
                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="60dp"
                    android:layout_marginEnd="8dp"
                    android:layout_height="60dp"
                    android:text="14"
                    android:id="@+id/d2"
                    />
                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="50dp"
                    android:text="15"
                    android:id="@+id/d3"
                    />
                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="60dp"
                    android:layout_marginEnd="8dp"
                    android:layout_height="60dp"
                    android:id="@+id/d4"
                    android:text="16"/>
            </LinearLayout>
            <!--    baris 5-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bfour"
                android:layout_marginTop="7dp"
                android:id="@+id/baris4"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal">
                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginEnd="8dp"
                    android:text="17"
                    android:id="@+id/e1"
                    />
                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:text="18"
                    android:id="@+id/e2"
                    android:layout_marginEnd="8dp"
                    />
                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="60dp"
                    android:layout_marginEnd="8dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="50dp"
                    android:text="19"
                    android:id="@+id/e3"
                    />
                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="60dp"
                    android:layout_marginEnd="8dp"
                    android:layout_height="60dp"
                    android:id="@+id/e4"
                    android:text="20"/>
            </LinearLayout>
            <!--baris 6-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/baris4"
                android:layout_marginTop="7dp"
                android:id="@+id/baris6"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal">
                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="60dp"
                    android:layout_marginEnd="8dp"
                    android:layout_height="60dp"
                    android:text="21"
                    android:id="@+id/f1"
                    />
                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="60dp"
                    android:layout_marginEnd="8dp"
                    android:layout_height="60dp"
                    android:text="22"
                    android:id="@+id/f2"
                    />
                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="60dp"
                    android:layout_marginEnd="8dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="50dp"
                    android:text="23"
                    android:id="@+id/f3"
                    />
                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="60dp"
                    android:layout_marginEnd="8dp"
                    android:layout_height="60dp"
                    android:id="@+id/f4"
                    android:text="24"/>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnBooknow"
        android:elevation="8dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/background_popup"
            android:backgroundTint="#8749F2"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selected seat"
            android:textSize="12sp"
            android:layout_marginStart="7dp"/>
    </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="20dp">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/background_popup"
                android:backgroundTint="#F88C99F1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reserved"
                android:textSize="12sp"
                android:layout_marginStart="7dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="20dp">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/background_popup"
                android:backgroundTint="#F89A9A9A"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Available"
                android:textSize="12sp"
                android:layout_marginStart="7dp"/>
        </LinearLayout>
    </LinearLayout>
    <androidx.appcompat.widget.AppCompatButton
        android:layout_marginHorizontal="32dp"
        android:id="@+id/btnBooknow"
        android:layout_width="315dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:backgroundTint="#673AB7"
        android:text="@string/book_now"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:letterSpacing="0.01"/>
</RelativeLayout>