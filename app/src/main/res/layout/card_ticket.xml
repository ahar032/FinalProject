<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_popup"
    android:layout_marginHorizontal="16dp"
    android:layout_marginBottom="9dp"
    android:paddingBottom="15dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp">
        <LinearLayout
            android:id="@+id/ly1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_popup"
            android:backgroundTint="#8749F2"
            android:orientation="vertical"
            android:paddingVertical="10dp"
            android:paddingHorizontal="24dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/friday_23_jul_2019"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:lineSpacingExtra="10sp"
                android:translationY="-4.8sp"
                android:textStyle="bold"
                android:id="@+id/dateOrder"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="textEnd"
                android:id="@+id/orderId"
                android:layout_marginTop="7dp"
                android:text="Book No.1090"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:lineSpacingExtra="10sp"
                android:translationY="-4.8sp"
                android:textStyle="bold"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ly2"
            android:layout_below="@+id/ly1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:paddingHorizontal="24dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/busName"
                android:text="@string/sempati_star"
                android:textColor="#693BB8"
                android:textSize="14sp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/plate"
                android:text="@string/p_1963_nm"
                android:layout_marginStart="20dp"
                android:textSize="12sp"
                android:lineSpacingExtra="10sp"
                android:textColor="#adadad"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ly2"
            android:id="@+id/ly3"
            android:paddingEnd="70dp"
            android:paddingStart="24dp"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/time_departure"
                android:text="@string/_17_30"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#585858"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/departure"
                android:text="JAWA TIMUR"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:textSize="12sp"
                android:textColor="#adadad"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ly3"
            android:id="@+id/ly4"
            android:paddingEnd="70dp"
            android:paddingStart="24dp"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/time_arrival"
                android:text="@string/_09_30"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#585858"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/arrival"
                android:text="JAWA BARAT"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:textSize="12sp"
                android:textColor="#adadad"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="70dp"
            android:paddingStart="24dp"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/ly4">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/amount"
                android:text="Rp "
                android:textColor="#693BB8"
                android:textSize="14sp"
                android:gravity="center_vertical"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:id="@+id/harga"
                android:textColor="#693BB8"
                android:textSize="14sp"
                android:textStyle="bold"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/statuspic"
                    android:contentDescription="@string/picture"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/detailstatus"
                    android:gravity="center_vertical"
                    android:textSize="14sp"
                    android:textColor="#61CA5F"
                    android:layout_marginStart="10dp"/>

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>