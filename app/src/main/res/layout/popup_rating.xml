<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_popup"
    android:elevation="10dp"
    android:translationZ="10dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:elevation="2dp"
        android:layout_marginHorizontal="17dp"
        android:paddingTop="24dp"
        android:gravity="center_horizontal"
        android:paddingHorizontal="34dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="How was your trip?"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#3D3D3D"/>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="203dp"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="10sp"
            android:translationY="-4.8sp"
            android:gravity="center_horizontal"
            android:textSize="12sp"
            android:textColor="#ADADAD"
            android:text="You've been completed your trip with this detail"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/po_name"
                        style="@style/bux_is_a_on"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sempati_star"
                        android:layout_marginTop="6dp"
                        style="@style/style_arrival_departure_payment_detail"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:gravity="end"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/bus_no"
                        style="@style/bux_is_a_on"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/p_1963_nm"
                        android:layout_marginTop="6dp"
                        style="@style/style_arrival_departure_payment_detail"/>
                </LinearLayout>
            </LinearLayout>
        <LinearLayout
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Departure date"
                    style="@style/bux_is_a_on"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:id="@+id/date_departure"
                    android:layout_marginTop="6dp"
                    style="@style/style_arrival_departure_payment_detail"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="end"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ticket status"
                    style="@style/bux_is_a_on"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/paid"
                        android:layout_marginRight="10dp"
                        android:contentDescription="@string/paid"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Done"
                        android:layout_marginTop="6dp"
                        style="@style/style_arrival_departure_payment_detail"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please give your rating"
            android:textSize="12sp"
            android:textColor="#ADADAD"
            android:lineSpacingExtra="10sp"
            android:translationY="-4.8sp"
            android:layout_marginTop="35dp"/>
        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rb"
            android:progressTint="#FFC107"
            android:backgroundTint="#19B3B0AF"
            android:numStars="5"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rate"
            android:text="rate this trip"
            android:textColor="#693BB8"
            android:letterSpacing="0.01"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textAllCaps="true"
            android:lineSpacingExtra="9sp"
            android:layout_marginTop="10dp"
            android:translationY="-4.45sp"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>