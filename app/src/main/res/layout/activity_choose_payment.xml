<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".payment.ChoosePaymentActivity">
    <LinearLayout
        android:layout_marginHorizontal="32dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:id="@+id/actionbar"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/goback"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_baseline_arrow_back_ios_new_24"
            android:layout_gravity="center"
            android:contentDescription="@string/goback"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">
            <TextView
                android:textStyle="bold"
                android:textColor="#3D3D3D"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/payment"
                style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ly1"
        android:layout_width="342dp"
        android:layout_height="120dp"
        android:orientation="vertical"
        android:layout_below="@id/actionbar"
        android:layout_marginHorizontal="12dp"
        android:layout_centerHorizontal="true"
        android:paddingHorizontal="30dp"
        android:paddingVertical="15dp"
        android:background="@drawable/background_popup">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/total_payment"
            android:textSize="12sp"
            android:lineSpacingExtra="10sp"
            android:translationY="-4.8sp"
            android:textColor="#585858"/>
        <TextView
            android:id="@+id/amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rp166_000_00"
            android:textSize="22sp"
            android:textColor="#8749f2"
            android:textStyle="bold"/>
        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginVertical="10dp"
            android:background="#c0c0c0"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/please_select_one_of_the_payment_method_below"
            android:textSize="12sp"
            android:textColor="#808080"
            android:lineSpacingExtra="10sp"
            android:translationY="-4.8sp"/>

    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/payment_method"
        android:layout_below="@+id/ly1"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        android:textSize="14sp"
        android:id="@+id/tv1"
        android:textColor="#3D3D3D"/>
    <LinearLayout
        android:id="@+id/ly2"
        android:layout_width="342dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/tv1"
        android:layout_marginHorizontal="12dp"
        android:layout_centerHorizontal="true"
        android:paddingHorizontal="30dp"
        android:paddingVertical="15dp"
        android:background="@drawable/background_popup">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/stripe"
                android:textSize="12sp"
                android:gravity="center_vertical"
                android:textColor="#808080"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/stripe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="textEnd"
                android:text="@string/select"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textColor="#8749F2"
                android:lineSpacingExtra="8sp"
                android:translationY="-3.82sp"
                android:letterSpacing="0.01"/>
        </LinearLayout>
        <View
            android:id="@+id/v1"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginVertical="5dp"
            android:background="#c0c0c0"/>
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal">
          <ImageView
              android:layout_width="50dp"
              android:layout_height="30dp"
              android:src="@drawable/stripe_3ds2_ic_visa"
              android:contentDescription="@string/stripe_3ds2_brand_visa" />
          <ImageView
              android:layout_width="50dp"
              android:layout_height="30dp"
              android:src="@drawable/stripe_3ds2_ic_mastercard"
              android:contentDescription="@string/stripe_3ds2_brand_visa" />

      </LinearLayout>
    </LinearLayout>

</RelativeLayout>