<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".order.DetailOrderActivity">
    <LinearLayout
        android:layout_marginHorizontal="32dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:id="@+id/actionbar"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/goback"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_baseline_arrow_back_ios_new_24"
            android:layout_gravity="center"
            android:contentDescription="@string/goback"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">
            <TextView
                android:textStyle="bold"
                android:textColor="#3D3D3D"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ticket Detail"
                style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="342dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/actionbar"
        android:id="@+id/ly1"
        android:background="@drawable/background_popup"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#8749F2"
            android:paddingVertical="15dp"
            android:paddingHorizontal="20dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/friday_23_jul_2019"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:lineSpacingExtra="10sp"
                android:translationY="-4.8sp"
                android:textStyle="bold"
                android:id="@+id/dateOrder"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="textEnd"
                android:id="@+id/orderId"
                android:layout_marginTop="7dp"
                android:text="Book No.1090"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:lineSpacingExtra="10sp"
                android:translationY="-4.8sp"
                android:textStyle="bold"/>
        </LinearLayout>
            <TextView
                android:paddingHorizontal="30dp"
                android:paddingVertical="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="10sp"
                android:text="@string/name"
                android:textColor="#D8D8D8"
                android:textSize="12sp"
                android:translationY="-4.8sp" />

            <TextView
                android:paddingHorizontal="30dp"
                android:paddingVertical="15dp"
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#585858"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:paddingHorizontal="30dp"
                android:paddingVertical="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="10sp"
                        android:text="@string/phone_number"
                        android:textColor="#d8d8d8"
                        android:textSize="12sp"
                        android:translationY="-4.8sp" />

                    <TextView
                        android:id="@+id/phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/_08123990823"
                        android:textColor="#adadad"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="27dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="10sp"
                        android:text="@string/seats"
                        android:textColor="#d8d8d8"
                        android:textSize="12sp"
                        android:translationY="-4.8sp" />

                    <TextView
                        android:id="@+id/tickets"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/_2"
                        android:textColor="#adadad"
                        android:textSize="14sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="27dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="10sp"
                        android:text="Status"
                        android:textColor="#d8d8d8"
                        android:textSize="12sp"
                        android:translationY="-4.8sp" />

                    <TextView
                        android:id="@+id/status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Paid"
                        android:textColor="#adadad"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Detail Status"
        android:layout_below="@id/ly1"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="10dp"
        android:id="@+id/tv1"
        style="@style/style_arrival_departure_payment_detail"/>
    <LinearLayout
        android:id="@+id/ly2"
        android:layout_width="342dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:background="@drawable/background_popup"
        android:paddingVertical="15dp"
        android:paddingHorizontal="30dp"
        android:layout_marginHorizontal="30dp"
        android:layout_below="@id/tv1"
        android:orientation="vertical"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detail status order"
            android:textColor="#D8D8D8"
            android:textSize="12sp"
            android:translationY="-4.8sp"
            android:lineSpacingExtra="10dp"/>
        <TextView
            android:id="@+id/detailstatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="on going"
            android:textColor="#adadad"
            android:textSize="14sp" />
    </LinearLayout>
    <LinearLayout
        android:paddingVertical="15dp"
        android:background="@drawable/background_popup"
        android:layout_width="342dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/ly2"
        android:paddingHorizontal="30dp"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:id="@+id/ly3">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/po_name"
                android:textColor="#d8d8d8"
                android:textSize="12sp"
                android:lineSpacingExtra="10sp"
                android:translationY="-4.8sp"/>

            <TextView
                android:textAlignment="textEnd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/bus_no"
                android:textColor="#d8d8d8"
                android:textSize="12sp"
                android:lineSpacingExtra="10sp"
                android:translationY="-4.8sp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sempati_star"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#585858"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/p_1963_nm"
                android:textAlignment="textEnd"
                android:textSize="12sp"
                android:textColor="#9a9a9a"
                android:lineSpacingExtra="10sp"
                android:translationY="-4.8sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/schedule"
                android:lineSpacingExtra="10sp"
                android:textColor="#d8d8d8"
                android:textSize="12sp"
                android:translationY="-4.8sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="10sp"
                android:textColor="#d8d8d8"
                android:textSize="12sp"
                android:translationY="-4.8sp"
                android:textAlignment="textEnd"
                android:text="@string/estimated_time"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_17_30"
                style="@style/time_bus"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/departure"
                    style="@style/style_arrival_departure_payment_detail"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/date_departure"
                    style="@style/style_arrival_departure_payment_detail"
                    android:textStyle="normal"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="textEnd"
                style="@style/style_arrival_departure_payment_detail"
                android:text="@string/_13h45m"/>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_09_30"
                style="@style/time_bus"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/arrival"
                    style="@style/style_arrival_departure_payment_detail"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/date_arrival"
                    style="@style/style_arrival_departure_payment_detail"
                    android:textStyle="normal"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/seat_no"
                    android:lineSpacingExtra="10sp"
                    android:textColor="#d8d8d8"
                    android:textSize="12sp"
                    android:translationY="-4.8sp"
                    android:textAlignment="textEnd"/>
                <TextView
                    style="@style/style_arrival_departure_payment_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/_9_10"
                    android:id="@+id/list_seat"
                    android:textAlignment="textEnd" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>