<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".bus.SearchResultActivity"
    android:background="#f4f4f4"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:id="@+id/actionbar"
        android:orientation="horizontal"
        android:layout_marginHorizontal="36dp">
        <ImageView
            android:id="@+id/goback"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_baseline_arrow_back_ios_new_24"
            android:layout_gravity="center"
            android:contentDescription="@string/goback"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/bus"
                android:contentDescription="@string/logo"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/actionbar"
        android:id="@+id/ly1">
        <LinearLayout
            android:layout_width="170dp"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/background_popup"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_marginStart="15dp"
                android:layout_weight="1">
                <TextView
                    android:layout_marginTop="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/departure"
                    android:textSize="12sp"
                    android:textColor="#ADADAD"
                    android:lineSpacingExtra="10sp"
                    android:translationY="-4.8sp"/>
                <TextView
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/departure"
                    android:textSize="16sp"
                    android:textColor="#808080"/>
            </LinearLayout>
            <ImageView
                android:id="@+id/from"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_baseline_arrow_drop_down_24"
                android:contentDescription="@string/dropdown"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="170dp"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginStart="30dp"
            android:background="@drawable/background_popup"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_marginStart="15dp"
                android:layout_weight="1">
                <TextView
                    android:layout_marginTop="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/arrival"
                    android:textSize="12sp"
                    android:textColor="#ADADAD"
                    android:lineSpacingExtra="10sp"
                    android:translationY="-4.8sp"/>
                <TextView
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/arrival"
                    android:textSize="16sp"
                    android:textColor="#808080"/>
            </LinearLayout>
            <ImageView
                android:id="@+id/where"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_baseline_arrow_drop_down_24"
                android:contentDescription="@string/dropdown"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:orientation="horizontal"
        android:id="@+id/ly2"
        android:layout_below="@id/ly1"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/date"
            android:background="@drawable/background_popup"
            android:text="@string/_11_11_2022"
            android:paddingHorizontal="16dp"
            android:paddingVertical="7dp"
            android:lineSpacingExtra="10sp"
            android:translationY="-4.8sp"
            android:textSize="12sp"
            android:textColor="#808080"
            android:layout_marginTop="15dp"/>
        <TextView
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:background="@drawable/background_popup"
            android:id="@+id/seat"
            android:text="@string/seat_2"
            android:paddingHorizontal="16dp"
            android:paddingVertical="7dp"
            android:lineSpacingExtra="10sp"
            android:translationY="-4.8sp"
            android:textSize="12sp"
            android:textColor="#808080"/>
        <TextView
            android:layout_marginTop="15dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/sort_by_best_experience"
            android:background="@drawable/background_popup"
            android:textAlignment="center"
            android:paddingVertical="7dp"
            android:lineSpacingExtra="10sp"
            android:translationY="-4.8sp"
            android:textSize="12sp"
            android:textColor="#693BB8"
            android:layout_weight="1"
            android:layout_marginEnd="18dp"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ly3"
        android:layout_marginTop="20dp"
        android:paddingHorizontal="22dp"
        android:layout_width="343dp"
        android:layout_height="231dp"
        android:layout_below="@id/ly2"
        android:layout_centerHorizontal="true"
        android:paddingVertical="15dp"
        android:background="@drawable/background_popup"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:baselineAligned="false">
            <LinearLayout
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sempati_star"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#8749F2"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:text="@string/p_1963_nm"
                        android:textSize="12sp"
                        android:textColor="#adadad"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="7dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/_17_30"
                        android:textSize="16sp"
                        android:id="@+id/time_departure"
                        android:textStyle="bold"
                        android:textColor="#585858"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:text=""
                        android:id="@+id/card_departure"
                        android:textSize="12sp"
                        android:textColor="#adadad"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="35dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/_09_30"
                        android:id="@+id/time_arrival"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#585858"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:text=""
                        android:id="@+id/card_arrival"
                        android:textSize="12sp"
                        android:textColor="#adadad"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    android:background="@drawable/background_popup"
                    android:backgroundTint="#FFD03D"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/_4_9_5"
                        android:textAlignment="center"
                        android:textColor="#8C6F12"
                        android:textSize="14sp"
                        app:drawableTopCompat="@drawable/ic_baseline_star_24" />

                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="30dp"
                    android:textColor="#adadad"
                    android:textSize="12sp"
                    android:textAlignment="textEnd"
                    android:text="@string/_120_reviews"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/rp_166_000_00"
                    android:textColor="#8749F2"
                    android:textStyle="bold"
                    android:textSize="16sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/seat"
                    android:textSize="12sp"
                    android:textColor="#585858"/>
            </LinearLayout>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bookNow"
                android:layout_width="85dp"
                android:layout_height="40dp"
                android:backgroundTint="#673AB7"
                android:text="@string/book_now"
                android:textColor="@color/white"
                android:textSize="11sp"
                android:letterSpacing="0.01"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:backgroundTint="#C3C1C1"
        android:layout_marginTop="20dp"
        android:paddingHorizontal="22dp"
        android:layout_width="343dp"
        android:layout_height="231dp"
        android:layout_below="@id/ly3"
        android:layout_centerHorizontal="true"
        android:paddingVertical="15dp"
        android:background="@drawable/background_popup"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:baselineAligned="false">
            <LinearLayout
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/pahala_kencana"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#ADADAD"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:text="@string/p_1963_nm"
                        android:textSize="12sp"
                        android:textColor="#adadad"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="7dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/_02_30"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#585858"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:text=""
                        android:id="@+id/card_departure_disable"
                        android:textSize="12sp"
                        android:textColor="#adadad"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="35dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/_16_00"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#585858"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:text=""
                        android:id="@+id/card_arrival_disable"
                        android:textSize="12sp"
                        android:textColor="#adadad"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    android:background="@drawable/background_popup"
                    android:backgroundTint="#D8D8D8"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/_4_9_5"
                        android:textAlignment="center"
                        android:textColor="#8C6F12"
                        android:textSize="14sp"
                        app:drawableTopCompat="@drawable/ic_baseline_star_24" />

                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="30dp"
                    android:textColor="#adadad"
                    android:textSize="12sp"
                    android:textAlignment="textEnd"
                    android:text="@string/_120_reviews"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/rp_166_000_00"
                    android:textColor="#8749F2"
                    android:textStyle="bold"
                    android:textSize="16sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/seat"
                    android:textSize="12sp"
                    android:textColor="#585858"/>
            </LinearLayout>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/SoldOut"
                android:layout_width="85dp"
                android:layout_height="40dp"
                android:backgroundTint="#D8D8D8"
                android:text="Soldout"
                android:textColor="#808080"
                android:textSize="11sp"
                android:enabled="false"
                android:letterSpacing="0.01"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>